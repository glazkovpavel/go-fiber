package layout

import "fmt"

css headerClass(percent int) {
    background: { "#222222" };
    text-align: { "center" };
    width: { fmt.Sprintf("%d%%", percent)};
}

templ Header() {
    @HeaderStyle()
	<div class="header">
	    @Menu()
	    { children... }
	</div>
}

templ HeaderStyle() {
	<style>
	    .header {
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
	        background: #222222;
	    }
	</style>
}